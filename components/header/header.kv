<Header>:
    size_hint_y: None
    height: "50dp"
    padding: "12dp"
    spacing: "10dp"
    orientation: "horizontal"
    
    # No canvas.before - completely transparent, shows gradient behind
    
    Label:
        text: root.status_text
        color:
            (0.29, 0.87, 0.5, 1) if root.status_text == "SYSTEM READY" else \
            (1, 0.75, 0.2, 1) if root.status_text == "BUSY" else \
            (1, 0.3, 0.3, 1)
        halign: "left"
        font_size: "13sp"
        bold: True
    
    Label:
        text: root.site_text
        halign: "center"
        color: 0.95, 0.98, 1, 1
        font_size: "13sp"
    
    Label:
        text: root.time_text
        halign: "right"
        color: 0.95, 0.98, 1, 1
        font_size: "13sp"