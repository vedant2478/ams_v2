<HomeScreen>:
    BoxLayout:
        orientation: "vertical"

        # ================= HEADER =================
        Header:
            pos_hint: {"top": 1}

        # ================= BODY =================
        FloatLayout:
            size_hint_y: 1

            # -------- SMOOTH GRADIENT BACKGROUND --------
            GradientBackground:
                pos: self.parent.pos
                size: self.parent.size

            # -------- CENTER CONTENT --------
            BoxLayout:
                orientation: "vertical"
                spacing: "25dp"
                size_hint: None, None
                size: "600dp", "600dp"
                pos_hint: {"center_x": 0.5, "center_y": 0.50}

                Widget:
                    size_hint_y: 0.12

                # -------- TIME --------
                Label:
                    text: root.time_text
                    font_size: "130sp"
                    color: 0.92, 0.96, 0.99, 1
                    size_hint_y: None
                    height: "160dp"

                Widget:
                    size_hint_y: None
                    height: "20dp"

                # -------- SITE NAME --------
                Label:
                    text: root.site_name
                    font_size: "38sp"
                    color: 0.65, 0.78, 0.88, 1
                    size_hint_y: None
                    height: "55dp"
                    letter_spacing: "3sp"

                Widget:
                    size_hint_y: None
                    height: "12dp"

                # -------- STATUS --------
                Label:
                    text: "READY" if root.status_text == "SYSTEM READY" else root.status_text
                    font_size: "24sp"
                    color: 0.55, 0.68, 0.80, 1
                    size_hint_y: None
                    height: "40dp"
                    letter_spacing: "4sp"

                Widget:
                    size_hint_y: None
                    height: "55dp"

                # -------- START BUTTON --------
                Button:
                    text: "START"
                    size_hint: None, None
                    size: "155dp", "155dp"
                    pos_hint: {"center_x": 0.5}
                    background_normal: ""
                    background_color: 0, 0, 0, 0
                    color: 0.70, 0.82, 0.92, 1
                    font_size: "21sp"
                    letter_spacing: "2sp"
                    on_release: root.on_start_pressed()

                    canvas.before:
                        Color:
                            rgba: 0.02, 0.08, 0.15, 0.8
                        Ellipse:
                            pos: self.x - 12, self.y - 15
                            size: self.width + 24, self.height + 30

                        Color:
                            rgba: 0.05, 0.12, 0.20, 1
                        Ellipse:
                            pos: self.pos
                            size: self.size

                    canvas.after:
                        Color:
                            rgba: 0.20, 0.35, 0.50, 0.9
                        Line:
                            circle: (self.center_x, self.center_y, self.width / 2)
                            width: 2.5

                Widget:
                    size_hint_y: 0.12

            # ================= CONFIG BUTTON =================
            Button:
                text: "âš™"
                size_hint: None, None
                size: "55dp", "55dp"
                pos_hint: {"x": 0.02, "y": 0.02}
                background_normal: ""
                background_color: 0, 0, 0, 0
                color: 0.65, 0.78, 0.88, 0.9
                font_size: "26sp"
                on_release: root.open_config()

                canvas.before:
                    Color:
                        rgba: 0.02, 0.06, 0.12, 0.85
                    Ellipse:
                        pos: self.x - 6, self.y - 6
                        size: self.width + 12, self.height + 12

                    Color:
                        rgba: 0.06, 0.14, 0.22, 1
                    Ellipse:
                        pos: self.pos
                        size: self.size

                canvas.after:
                    Color:
                        rgba: 0.18, 0.32, 0.48, 0.8
                    Line:
                        circle: (self.center_x, self.center_y, self.width / 2)
                        width: 1.8

        # ================= FOOTER =================
        Footer:
            version: "12.9.3"
