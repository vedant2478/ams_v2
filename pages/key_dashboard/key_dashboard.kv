#:kivy 2.1.0

<KeyDashboardScreen>:
    FloatLayout:

        # =====================================================
        # BASE SCREEN (UNCHANGED UI)
        # =====================================================
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 1

            # ================= HEADER =================
            Header:
                size_hint_y: None
                height: dp(64)

            BoxLayout:
                size_hint_y: None
                height: dp(48)
                padding: dp(16), 0

                Button:
                    text: "Back"
                    size_hint_x: None
                    width: dp(100)
                    background_normal: ""
                    background_color: 0, 0, 0, 0
                    color: 0.90, 0.95, 1, 1
                    font_size: "16sp"
                    on_release: root.go_back()

                Widget:

            # ================= BODY =================
            FloatLayout:
                size_hint_y: 1

                GradientBackground:
                    pos: self.pos
                    size: self.size

                BoxLayout:
                    orientation: "vertical"
                    size_hint: 0.9, 0.9
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    padding: dp(20)
                    spacing: dp(15)

                    # -------- TITLE --------
                    Label:
                        text: "KEY AUTHORIZATION\nDASHBOARD"
                        font_size: "24sp"
                        bold: True
                        color: 0.92, 0.96, 0.99, 1
                        halign: "center"
                        valign: "middle"
                        size_hint_y: None
                        height: self.texture_size[1] + dp(20)
                        text_size: self.width, None

                    # -------- ACTIVITY INFO --------
                    BoxLayout:
                        size_hint_y: None
                        height: dp(56)
                        spacing: dp(12)

                        BoxLayout:
                            padding: dp(10)
                            size_hint_x: 0.6
                            canvas.before:
                                Color:
                                    rgba: 0.18, 0.65, 0.31, 1
                                RoundedRectangle:
                                    radius: [20]
                                    pos: self.pos
                                    size: self.size
                            Label:
                                text: "ACTIVITY CODE: " + root.activity_code
                                bold: True
                                color: 1, 1, 1, 1
                                font_size: "17sp"

                        Label:
                            size_hint_x: 0.4
                            text: "Time: " + root.time_remaining + " sec"
                            font_size: "17sp"
                            color: 0.80, 0.90, 0.98, 1
                            halign: "right"
                            valign: "middle"
                            text_size: self.size

                    # -------- PROGRESS BAR --------
                    BoxLayout:
                        size_hint_y: None
                        height: dp(12)
                        padding: dp(2)
                        canvas.before:
                            Color:
                                rgba: 0.12, 0.20, 0.30, 1
                            RoundedRectangle:
                                radius: [7]
                                pos: self.pos
                                size: self.size
                        BoxLayout:
                            size_hint_x: 0.6
                            canvas.before:
                                Color:
                                    rgba: 0.95, 0.45, 0.05, 1
                                RoundedRectangle:
                                    radius: [7]
                                    pos: self.pos
                                    size: self.size

                    # -------- KEY LIST --------
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: 1
                        padding: dp(12)
                        spacing: dp(8)
                        canvas.before:
                            Color:
                                rgba: 0.02, 0.08, 0.16, 1
                            RoundedRectangle:
                                radius: [18]
                                pos: self.pos
                                size: self.size

                        ScrollView:
                            do_scroll_x: False

                            GridLayout:
                                id: key_grid
                                cols: 1
                                spacing: dp(8)
                                padding: dp(6)
                                size_hint_y: None
                                height: self.minimum_height
                                row_force_default: True
                                row_default_height: dp(56)

            # ================= FOOTER =================
            Footer:
                size_hint_y: None
                height: dp(48)
                version: "12.9.3"


<KeyItem>:
    size_hint_y: None
    height: dp(56)
    padding: dp(16), 0
    spacing: dp(10)
    on_release : self.go_done()

    canvas.before:
        Color:
            rgba: 0.05, 0.12, 0.24, 1
        RoundedRectangle:
            radius: [14]
            pos: self.pos
            size: self.size

    # -------- KEY NAME --------
    Label:
        text: root.key_name
        color: 0.90, 0.95, 1, 1
        font_size: "16sp"
        halign: "left"
        valign: "middle"
        text_size: self.size

    # -------- STATUS --------
    BoxLayout:
        size_hint_x: None
        width: dp(110)
        spacing: dp(8)

        Widget:
            size_hint_x: None
            width: dp(20)
            canvas:
                Color:
                    rgba: root.status_color
                Ellipse:
                    pos: self.center_x - dp(8), self.center_y - dp(8)
                    size: dp(16), dp(16)

        Label:
            text: root.status_text
            color: root.status_color
            font_size: "14sp"
            valign: "middle"
            halign: "left"
            text_size: self.size
