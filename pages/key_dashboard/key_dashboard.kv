<KeyDashboardScreen>:
    FloatLayout:

        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 1

            Header:
                size_hint_y: None
                height: dp(64)

            BoxLayout:
                size_hint_y: None
                height: dp(48)
                padding: dp(16), 0

                Button:
                    text: "Back"
                    size_hint_x: None
                    width: dp(100)
                    background_normal: ""
                    background_color: 0, 0, 0, 0
                    color: 0.9, 0.95, 1, 1
                    on_release: root.go_back()

                Widget:

            FloatLayout:
                size_hint_y: 1

                BoxLayout:
                    orientation: "vertical"
                    size_hint: 0.9, 0.9
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    padding: dp(20)
                    spacing: dp(15)

                    Label:
                        text: "KEY AUTHORIZATION DASHBOARD"
                        font_size: "22sp"
                        color: 1, 1, 1, 1

                    BoxLayout:
                        size_hint_y: None
                        height: dp(40)

                        Label:
                            text: "ACTIVITY CODE: " + root.activity_code
                            color: 1, 1, 1, 1

                        Label:
                            text: "Time: " + root.time_remaining + " sec"
                            halign: "right"
                            text_size: self.size

                    BoxLayout:
                        size_hint_y: None
                        height: dp(12)
                        padding: dp(2)

                        canvas.before:
                            Color:
                                rgba: 0.15, 0.2, 0.3, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [6]

                        BoxLayout:
                            size_hint_x: root.progress_value
                            canvas.before:
                                Color:
                                    rgba: 1, 0.4, 0.1, 1
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [6]

                    ScrollView:
                        GridLayout:
                            id: key_grid
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height
                            spacing: dp(8)
